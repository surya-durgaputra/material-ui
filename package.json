{
  "name": "material-ui-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "material-ui": "^0.19.1",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-router-dom": "^4.2.2",
    "react-scripts": "1.0.13",
    "react-tap-event-plugin": "^2.0.1",
    "typeface-roboto": "0.0.35"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "prettyWithStandard": "prettier 'src/!(registerServiceWorker).js' 'src/components/**/*.js' '*.js' --write --single-quote --no-semi && standard --fix",
    "pretty": "prettier 'src/!(registerServiceWorker).js' 'src/components/**/*.js' '*.js' --write --single-quote --no-semi",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "chai": "^4.1.2",
    "eslint": "^4.7.0",
    "eslint-plugin-react": "^7.3.0",
    "eslint-watch": "^3.1.2",
    "husky": "^0.14.3",
    "lint-staged": "^4.1.3",
    "mocha": "^3.5.3",
    "nightmare": "^2.10.0",
    "prettier": "^1.6.1"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write --single-quote --no-semi",
      "esw src --color",
      "git add"
    ]
  }
}
